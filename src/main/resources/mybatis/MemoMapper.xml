<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.MemoMapper">

	<select id="findById" parameterType="Long" resultType="com.example.demo.domain.Memo">
		SELECT * FROM memos WHERE id = #{id}, user_name = #{user_name}
	</select>
	
	<select id="findByTitle" parameterType="String" resultType="com.example.demo.domain.Memo">
		SELECT * FROM memos WHERE title = #{title}
	</select>
	
	<select  id="memoCount" resultType="Long">
		SELECT COUNT(*) FROM memos
	</select>
	
	<select id="findAll" resultType="com.example.demo.domain.Memo">
		SELECT * FROM memos 
	</select>
	
	<insert id="insert" parameterType="com.example.demo.domain.Memo">
		INSERT INTO memos (title, content, created, updated) VALUES (#{title}, #{content}, #{created}, #{updated})
	</insert>
	
	<update id="update" parameterType="com.example.demo.domain.Memo">
		UPDATE memos SET title = #{title}, content = #{content}, updated = #{updated} WHERE id = #{id}
	</update>
	
	<delete id="delete" parameterType="Long">
		DELETE FROM memos WHERE id = #{id}
	</delete>
	
	<delete id="rmvAl">
		DELETE FROM memos
	</delete>
	
</mapper>